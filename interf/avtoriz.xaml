<Window x:Class="interf.avtoriz"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:interf"
        WindowState="Maximized"
        WindowStyle="None" mc:Ignorable="d"
        Title="AVTORENT" Height="450" Width="800">
    <Window.Resources>
        <Style TargetType="PasswordBox">
            <Setter Property="Background" Value="White"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="PasswordBox">
                        <Border CornerRadius="15" Background="{TemplateBinding Background}" BorderBrush="{TemplateBinding BorderBrush}" BorderThickness="{TemplateBinding BorderThickness}">
                            <ScrollViewer x:Name="PART_ContentHost" />
                        </Border>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>
    <Grid>
        <Viewbox>
            <Grid Height="450" Width="800">

                <Label Content="Авторизация" HorizontalAlignment="Left" HorizontalContentAlignment="Center" Margin="257,168,0,0" VerticalAlignment="Top" Foreground="#FFED5C18" FontSize="44" FontWeight="Bold"  Width="293">
                    <Label.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15"/>
                        </Style>
                    </Label.Resources>
                </Label>
                <TextBox x:Name="tbUser" HorizontalAlignment="Left" TextWrapping="Wrap" VerticalAlignment="Top" Width="319" FontSize="27" FontStyle="Italic" SelectionOpacity="0.5" BorderThickness="3" Margin="433,243,0,0" Height="46" BorderBrush="#FFED5C18" Foreground="Black" SelectionBrush="#FFED5C18">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="15"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <Button x:Name="clHello" Content="Войти" FontWeight="Bold" HorizontalAlignment="Center" Margin="0,367,0,0" VerticalAlignment="Top" Foreground="White" BorderBrush="{x:Null}" Background="#FFED5C18" FontSize="28" Width="242" Click="Hello" Height="50">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="30"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Label Content="Введите имя пользователя:" HorizontalAlignment="Left" FontWeight="Bold"  Margin="28,239,0,0" VerticalAlignment="Top" FontSize="27" Height="46" Width="376" Foreground="#FFED5C18"/>
                <Label Content="Введите пароль:" HorizontalContentAlignment="Right" FontWeight="Bold" Margin="173,0,389,103" VerticalAlignment="Bottom" FontSize="27" Height="46" Foreground="#FFED5C18"/>
                <PasswordBox x:Name="tbPass" HorizontalAlignment="Left"  VerticalAlignment="Top" Width="319" FontSize="27" FontStyle="Italic" BorderThickness="3" SelectionOpacity="0.5" Margin="433,301,0,0" Height="46" BorderBrush="#FFED5C18" Foreground="Black" SelectionBrush="#FFED5C18" PasswordChar="♥"/>
                <Label Content="AVTORENT " HorizontalAlignment="Center" HorizontalContentAlignment="Center" VerticalAlignment="Top" FontSize="110" FontFamily="Impact" FontWeight="Bold" FontStyle="Italic" Height="123" Width="525">
                    <Label.Foreground>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FFED5C18"/>
                            <GradientStop Color="#FF732804" Offset="1"/>
                        </LinearGradientBrush>
                    </Label.Foreground>
                </Label>
                <Label Content="аренда автомобиля с водителем" HorizontalAlignment="Left" Margin="173,109,0,0" VerticalAlignment="Top" FontFamily="Impact" FontSize="30">
                    <Label.Foreground>
                        <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                            <GradientStop Color="#FF903104"/>
                            <GradientStop Color="#FFED5C18" Offset="1"/>
                        </LinearGradientBrush>
                    </Label.Foreground>
                </Label>
                <Button Content="      " HorizontalAlignment="Right" Margin="0,0,726,11" VerticalAlignment="Bottom" Height="39" Width="46" Click="cancel">
                    <Button.Foreground>
                        <SolidColorBrush Color="Black" Opacity="0"/>
                    </Button.Foreground>
                    <Button.BorderBrush>
                        <SolidColorBrush Color="White" Opacity="0.015"/>
                    </Button.BorderBrush>
                    <Button.Background>
                        <ImageBrush ImageSource="image/cancel.png"/>
                    </Button.Background>
                </Button>
                <Button Content="      " HorizontalAlignment="Right" Margin="0,0,6,428" VerticalAlignment="Bottom" Height="18" Width="18" Click="exit">
                    <Button.Background>
                        <ImageBrush ImageSource="/image/крест.png"/>
                    </Button.Background>
                </Button>
            </Grid>
        </Viewbox>
    </Grid>
</Window>