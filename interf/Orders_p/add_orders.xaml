<Window x:Class="interf.Orders_p.add_orders"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        WindowState="Maximized" WindowStyle="None"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:interf"
        mc:Ignorable="d"
        Title="AVTORENT" Height="450" Width="800">
    <Grid Margin="0,1,0,-1">
        <Viewbox>
            <Grid Height="450" Width="800">
                <Label x:Name="label_vodit" Content="ДОБАВЛЕНИЕ ЗАКАЗА" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontWeight="Bold" Height="66" Width="411" FontSize="36" Background="{x:Null}" Foreground="#FFED5C18"/>
                <TextBox x:Name="txDate1" HorizontalAlignment="Right" Margin="0,0,415,346" BorderThickness="3" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" Width="257" Height="34" Foreground="Black" BorderBrush="#FFED5C18" FontSize="18" FontFamily="Cascadia Mono" TextAlignment="Center" Padding="0,3,0,0">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <Label x:Name="label_add1" Content="Дата заказа" HorizontalAlignment="Right" Height="32" Margin="0,0,677,348" VerticalAlignment="Bottom" Width="113" FontSize="18" FontWeight="Bold" Background="White"/>
                <TextBox x:Name="textbox_Time" HorizontalAlignment="Right" Margin="0,0,415,302" BorderThickness="3" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" Width="244" Height="34" Foreground="Black" BorderBrush="#FFED5C18" FontSize="18" FontFamily="Cascadia Mono" TextAlignment="Center" Padding="0,3,0,0">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <Label x:Name="label_add2" Content="Время заказа" HorizontalAlignment="Right" Height="33" Margin="0,0,659,303" VerticalAlignment="Bottom" Width="131" FontSize="18" FontWeight="Bold" Background="White"/>

                <TextBox x:Name="textbox_DriverID" HorizontalAlignment="Right" Margin="0,0,415,256" BorderThickness="3" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" Width="215" Height="34" Foreground="Black" BorderBrush="#FFED5C18" FontSize="18" FontFamily="Cascadia Mono" TextAlignment="Center" Padding="0,3,0,0">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <Label x:Name="label_add4" Content="Номер водителя" HorizontalAlignment="Right" Height="32" Margin="0,0,630,259" VerticalAlignment="Bottom" Width="156" FontSize="18" FontWeight="Bold" Background="White" BorderBrush="White"/>
                <TextBox x:Name="textbox_AvtoID" HorizontalAlignment="Left" Margin="203,202,0,0" BorderThickness="3" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="182" Height="34" Foreground="Black" BorderBrush="#FFED5C18" FontSize="18" FontFamily="Cascadia Mono" TextAlignment="Center" Padding="0,3,0,0">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <Label x:Name="label_add5" Content="Гос. номер машины" HorizontalAlignment="Left" Height="32" Margin="14,203,0,0" VerticalAlignment="Top" Width="189" FontSize="18" FontWeight="Bold" Background="White"/>
                <TextBox x:Name="textbox_Customer" HorizontalAlignment="Right" Margin="0,0,415,45" BorderThickness="3" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" Width="366" Height="80" Foreground="Black" BorderBrush="#FFED5C18" FontSize="18" FontFamily="Cascadia Mono" TextAlignment="Center" Padding="0,3,0,0">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <Label x:Name="label_add6" Content="Данные заказчика" HorizontalContentAlignment="Center" HorizontalAlignment="Right" Height="33" Margin="0,0,415,130" VerticalAlignment="Bottom" Width="366" FontSize="18" FontWeight="Bold" Background="White"/>
                <Label x:Name="label_add7" Content="Маршрут" HorizontalAlignment="Right" Height="34" Margin="0,0,21,355" VerticalAlignment="Bottom" Width="376" FontSize="18" FontWeight="Bold" HorizontalContentAlignment="Center" Background="White"/>
                <TextBox x:Name="textbox_Requirements" SpellCheck.IsEnabled="True" Language="ru-ru" HorizontalAlignment="Right" Margin="0,0,22,47" BorderThickness="3" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" Width="375" Height="136" Foreground="Black" BorderBrush="#FFED5C18" FontSize="18" FontFamily="Cascadia Mono" TextAlignment="Center" Padding="0,0,0,20">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <Label x:Name="label_add8" Content="Дополнительные требования" HorizontalContentAlignment="Center" HorizontalAlignment="Right" Height="32" Margin="0,0,22,188" VerticalAlignment="Bottom" Width="375" FontSize="18" FontWeight="Bold" Background="White"/>
                <TextBox x:Name="textbox_Route" HorizontalAlignment="Right" Margin="0,0,21,227" BorderThickness="3" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" Width="376" Height="128" Foreground="Black" BorderBrush="#FFED5C18" FontSize="18" FontFamily="Cascadia Mono" TextAlignment="Center" Padding="0,0,0,20">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <Button Content="добавить" HorizontalAlignment="Right" Margin="0,0,24,8" VerticalAlignment="Bottom" Background="#FFED5C18" BorderBrush="#FFED5C18" BorderThickness="3" Height="29" Width="86" Click="cl_add" FontSize="15" FontWeight="Bold" FontStyle="Italic" Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="      " HorizontalAlignment="Right" Margin="0,0,755,6" VerticalAlignment="Bottom" Height="34" Width="40" Click="cancel">
                    <Button.Foreground>
                        <SolidColorBrush Color="Black" Opacity="0"/>
                    </Button.Foreground>
                    <Button.BorderBrush>
                        <SolidColorBrush Color="White" Opacity="0.015"/>
                    </Button.BorderBrush>
                    <Button.Background>
                        <ImageBrush ImageSource="/image/cancel.png"/>
                    </Button.Background>
                </Button>
                <TextBox x:Name="textbox_Sum" HorizontalAlignment="Right" Margin="0,0,416,170" BorderThickness="3" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" Width="203" Height="34" Foreground="Black" BorderBrush="#FFED5C18" FontSize="18" FontFamily="Cascadia Mono" TextAlignment="Center" Padding="0,3,0,0">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <Label x:Name="label_add5_Копировать" Content="Стоимость заказа" HorizontalAlignment="Right" Height="32" Margin="0,0,624,175" VerticalAlignment="Bottom" Width="163" FontSize="18" FontWeight="Bold" Background="White"/>
                <Button Content="      " HorizontalAlignment="Right" Margin="0,0,6,428" VerticalAlignment="Bottom" Height="18" Width="18" Click="exit">
                    <Button.Background>
                        <ImageBrush ImageSource="/image/крест.png"/>
                    </Button.Background>
                </Button>
                <Button Content="посмотреть все" FontSize="15" HorizontalAlignment="Right" Margin="0,0,119,8" VerticalAlignment="Bottom" Background="White" BorderBrush="#FFED5C18" BorderThickness="3" Height="29" Width="143" Click="cl_watch" FontWeight="Bold" FontStyle="Italic" Foreground="Black">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <DatePicker x:Name="textbox_Date" Text=" " FontSize="17" BorderThickness="3" HorizontalAlignment="Left" Margin="141,69,0,0" VerticalAlignment="Top" FirstDayOfWeek="Monday" DisplayDateStart="2024-03-30" Width="230" Background="{x:Null}" BorderBrush="{x:Null}" Foreground="Black"/>
                <ComboBox x:Name="box_driver" SelectedValuePath="ID" HorizontalAlignment="Left" Margin="194,167,0,0" VerticalAlignment="Top" Width="177"/>
                <ComboBox x:Name="box_avto" SelectedValuePath="ID" HorizontalAlignment="Left" Margin="220,209,0,0" VerticalAlignment="Top" Width="152"/>
                <Button Content="удалить заказ" FontSize="15" HorizontalAlignment="Right" Margin="0,0,266,9" VerticalAlignment="Bottom" Background="White" BorderBrush="#FFED5C18" BorderThickness="3" Height="28" Width="124" Click="cl_del" FontWeight="Bold" FontStyle="Italic" Foreground="Black">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Viewbox>
    </Grid>
</Window>
