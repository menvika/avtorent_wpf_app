<Window x:Class="interf.Driver_p.add_driver"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:interf"
        WindowState="Maximized" WindowStyle="None"
        mc:Ignorable="d"
        Title="AVTORENT" Height="450" Width="800">
    <Grid Margin="0,1,0,-1">
        <Viewbox>
            <Grid Height="450" Width="800">
                <Label x:Name="label_vodit" Content="ДОБАВЛЕНИЕ ВОДИТЕЛЯ" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontWeight="Bold" Height="66" Width="467" FontSize="36" Background="{x:Null}" Foreground="#FFED5C18"/>
                <TextBox x:Name="textbox_Name" HorizontalAlignment="Left"  Margin="189,137,0,0" BorderThickness="3" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="494" Height="56" Foreground="Black" BorderBrush="#FFED5C18" FontSize="18" FontFamily="Cascadia Mono" TextAlignment="Center" Padding="0,3,0,0" >
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <Label x:Name="label_add" Content="ФИО" HorizontalAlignment="Left" Height="32" Margin="124,149,0,0" VerticalAlignment="Top" Width="60" FontSize="18" FontWeight="Bold" Background="White"/>
                <TextBox x:Name="textbox_Phone" HorizontalAlignment="Left" Margin="290,0,0,0" BorderThickness="3" TextWrapping="Wrap" Text="" VerticalAlignment="Center" Width="393" Height="34" Foreground="Black" BorderBrush="#FFED5C18" FontSize="18" FontFamily="Cascadia Mono" TextAlignment="Center" Padding="0,3,0,0">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <Label x:Name="label_add1" Content="Номер телефона" HorizontalAlignment="Left" Height="32" Margin="124,0,0,0" VerticalAlignment="Center" Width="161" FontSize="18" FontWeight="Bold" Background="White"/>
                <TextBox x:Name="textbox_Pass" HorizontalAlignment="Right" Margin="0,0,117,151" BorderThickness="3" TextWrapping="Wrap" Text="" VerticalAlignment="Bottom" Width="321" Height="34" Foreground="Black" BorderBrush="#FFED5C18" FontSize="18" FontFamily="Cascadia Mono" TextAlignment="Center" Padding="0,3,0,0">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <Label x:Name="label_add2" Content="Серия и номер паспорта" HorizontalAlignment="Right" Height="33" Margin="0,0,443,150" VerticalAlignment="Bottom" Width="233" FontSize="18" FontWeight="Bold" Background="White"/>

                <Button Content="добавить" HorizontalAlignment="Right" FontSize="15" Margin="0,0,22,17" VerticalAlignment="Bottom" Background="#FFED5C18" BorderBrush="#FFED5C18" BorderThickness="3" Height="33" Width="87" Click="cl_add" FontWeight="Bold" FontStyle="Italic" Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="      " HorizontalAlignment="Right" Margin="0,0,726,11" VerticalAlignment="Bottom" Height="39" Width="46" Click="cancel">
                    <Button.Foreground>
                        <SolidColorBrush Color="Black" Opacity="0"/>
                    </Button.Foreground>
                    <Button.BorderBrush>
                        <SolidColorBrush Color="White" Opacity="0.015"/>
                    </Button.BorderBrush>
                    <Button.Background>
                        <ImageBrush ImageSource="/image/cancel.png"/>
                    </Button.Background>
                </Button>
                <Button Content="посмотреть всех" FontSize="15" HorizontalAlignment="Right" Margin="0,0,117,18" Background="White" BorderBrush="#FFED5C18" BorderThickness="3" Width="161" Click="cl_watch" FontWeight="Bold" FontStyle="Italic" Foreground="Black" Height="32" VerticalAlignment="Bottom">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="      " HorizontalAlignment="Right" Margin="0,0,6,428" VerticalAlignment="Bottom" Height="18" Width="18" Click="exit">
                    <Button.Background>
                        <ImageBrush ImageSource="/image/крест.png"/>
                    </Button.Background>
                </Button>
                <Button Content="удалить водителя" FontSize="15" HorizontalAlignment="Right" Margin="0,0,286,18" Background="White" BorderBrush="#FFED5C18" BorderThickness="3" Width="166" Click="cl_del" FontWeight="Bold" FontStyle="Italic" Foreground="Black" Height="32" VerticalAlignment="Bottom">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>

            </Grid>
        </Viewbox>
    </Grid>
</Window>
