<Window x:Class="interf.Driver_p.delete_driver"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:interf.Driver_p"
                WindowState="Maximized"
        WindowStyle="None"
        mc:Ignorable="d"
        Title="AVTORENT" Height="450" Width="800">
    <Grid Margin="0,1,0,-1">
        <Viewbox>
            <Grid Height="450" Width="800">
                <Label Content="УДАЛЕНИЕ ВОДИТЕЛЯ" HorizontalAlignment="Center" HorizontalContentAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontWeight="Bold" Height="66" Width="484" FontSize="36" Background="{x:Null}" Foreground="#FFED5C18"/>
                <Button Content=" добавить водителя" FontSize="15" HorizontalContentAlignment="Left" HorizontalAlignment="Right" Margin="0,0,257,7" VerticalAlignment="Bottom" Background="White" BorderBrush="#FFED5C18" BorderThickness="3" Height="43" Width="165" Click="cl_add" FontWeight="Bold" FontStyle="Italic" Foreground="Black">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="      " HorizontalAlignment="Right" Margin="0,0,726,11" VerticalAlignment="Bottom" Height="39" Width="46" Click="cancel">
                    <Button.Foreground>
                        <SolidColorBrush Color="Black" Opacity="0"/>
                    </Button.Foreground>
                    <Button.BorderBrush>
                        <SolidColorBrush Color="White" Opacity="0.015"/>
                    </Button.BorderBrush>
                    <Button.Background>
                        <ImageBrush ImageSource="/image/cancel.png"/>
                    </Button.Background>
                </Button>
                <TextBox x:Name="textbox_ID" HorizontalAlignment="Left" Margin="322,327,0,0" BorderThickness="3" TextWrapping="Wrap" Text="" VerticalAlignment="Top" Width="458" Height="58" Foreground="Black" BorderBrush="#FFED5C18" FontSize="18" FontFamily="Cascadia Mono" TextAlignment="Center" Padding="0,3,0,0">
                    <TextBox.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="20"/>
                        </Style>
                    </TextBox.Resources>
                </TextBox>
                <Label x:Name="label_delet" Content="Введите номер водителя &#xD;&#xA;для удаления:" HorizontalAlignment="Right" Height="66" Margin="0,0,483,65" VerticalAlignment="Bottom" Width="289" FontSize="22
                       " FontWeight="Bold" Background="White"/>
                <Button Content="      " HorizontalAlignment="Right" Margin="0,0,6,428" VerticalAlignment="Bottom" Height="18" Width="18" Click="exit">
                    <Button.Background>
                        <ImageBrush ImageSource="/image/крест.png"/>
                    </Button.Background>
                </Button>
                <Button Content="посмотреть все" HorizontalAlignment="Right" FontSize="15" Margin="0,0,116,7" VerticalAlignment="Bottom" Background="White" BorderBrush="#FFED5C18" BorderThickness="3" Height="43" Width="135" Click="cl_watch" FontWeight="Bold" FontStyle="Italic" Foreground="Black">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <DataGrid   HorizontalAlignment="Left" Height="180" Margin="28,117,0,0" VerticalAlignment="Top" Width="752" AutoGenerateColumns="True" x:Name="DriverGrid" RenderTransformOrigin="0.5,0.5" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" FontSize="9"/>
                <Label Content="Информация по водителям:" HorizontalAlignment="Left" Height="41" Margin="28,76,0,0" VerticalAlignment="Top" Width="358" FontSize="22" FontWeight="Bold" Background="White"/>
                <Button Content="удалить" FontSize="15" Click="cl_del" HorizontalAlignment="Right" Margin="0,0,20,7" VerticalAlignment="Bottom" Background="#FFED5C18" BorderBrush="#FFED5C18" BorderThickness="3" Height="43" Width="90" FontWeight="Bold" FontStyle="Italic" Foreground="White">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Viewbox>
    </Grid>
</Window>