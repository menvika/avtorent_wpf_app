<Window x:Class="interf.Driver_p.watch_driver"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:interf"
        WindowState="Maximized" WindowStyle="None"
        mc:Ignorable="d"
        Title="AVTORENT" Height="450" Width="800">
    <Grid Margin="0,1,0,-1">
        <Viewbox>
            <Grid Height="450" Width="800">
                <Label x:Name="label_vodit" Content="ПРОСМОТР ВОДИТЕЛЕЙ" HorizontalAlignment="Center" Margin="0,10,0,0" VerticalAlignment="Top" FontWeight="Bold" Height="66" Width="443" FontSize="36" Background="{x:Null}" Foreground="#FFED5C18"/>

                <Button Content="      " HorizontalAlignment="Right" Margin="0,0,726,11" VerticalAlignment="Bottom" Height="39" Width="46" Click="cancel">
                    <Button.Foreground>
                        <SolidColorBrush Color="Black" Opacity="0"/>
                    </Button.Foreground>
                    <Button.BorderBrush>
                        <SolidColorBrush Color="White" Opacity="0.015"/>
                    </Button.BorderBrush>
                    <Button.Background>
                        <ImageBrush ImageSource="/image/cancel.png"/>
                    </Button.Background>
                </Button>
                <DataGrid   HorizontalAlignment="Center" Height="325" Margin="0,65,0,0" VerticalAlignment="Top" Width="780" AutoGenerateColumns="True" Name="DriverGrid" RenderTransformOrigin="0.5,0.5" Background="{DynamicResource {x:Static SystemColors.WindowBrushKey}}" FontSize="9">
                </DataGrid>
                <Button Content="      " HorizontalAlignment="Right" Margin="0,0,6,428" VerticalAlignment="Bottom" Height="18" Width="18" Click="exit">
                    <Button.Background>
                        <ImageBrush ImageSource="/image/крест.png"/>
                    </Button.Background>
                </Button>
                <Button Content="добавить водителя" HorizontalAlignment="Right" Margin="0,0,10,15" VerticalAlignment="Bottom" Background="White" BorderBrush="#FFED5C18" FontSize="15" BorderThickness="3" Height="33" Width="165" Click="cl_add" FontWeight="Bold" FontStyle="Italic">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Button Content="удалить водителя" FontSize="15" HorizontalAlignment="Right" Margin="0,0,187,15" Background="White" BorderBrush="#FFED5C18" BorderThickness="3" Width="156" Click="cl_del" FontWeight="Bold" FontStyle="Italic" Foreground="Black" Height="33" VerticalAlignment="Bottom">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="10"/>
                        </Style>
                    </Button.Resources>
                </Button>
            </Grid>
        </Viewbox>
    </Grid>
</Window>
