                    <Button.Background>
                        <ImageBrush ImageSource="image/avto.png"/>
                    </Button.Background>
                </Button>
                <Button Content="      " HorizontalAlignment="Right" Margin="0,0,6,428" VerticalAlignment="Bottom" Height="18" Width="18" Click="exit">
                    <Button.Background>
                        <ImageBrush ImageSource="/image/крест.png"/>
                    </Button.Background>
                </Button>
                <Button x:Name="Zakazi1_Copy" Content="АВТО" HorizontalAlignment="Left" Margin="535,285,0,0" VerticalAlignment="Top" Foreground="White" BorderBrush="{x:Null}" FontWeight="Bold" FontSize="34" Height="52" Width="212" Background="Black" Click="avto">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="30"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Label Content="" HorizontalAlignment="Left" Margin="550,332,0,0" VerticalAlignment="Top" Foreground="#FFED5C18" FontWeight="Bold" FontSize="18" FontStyle="Italic" Grid.Column="1" Height="34" Width="10"/>
                <Label Content="" HorizontalAlignment="Left" Margin="561,366,0,0" VerticalAlignment="Top" Foreground="#FFED5C18" FontWeight="Bold" FontSize="18" FontStyle="Italic" Grid.Column="1" Height="34" Width="10"/>
                <Button x:Name="zakazi_Copy1" Content="" Margin="0,101,0,0" BorderBrush="#FFED5C18" BorderThickness="3" Height="179" VerticalAlignment="Top" HorizontalAlignment="Center" Width="180" Click="vodit">
                    <Button.Background>
                        <ImageBrush ImageSource="image/driver.png"/>
                    </Button.Background>
                </Button>
                <Button x:Name="Zakazi1_Copy1" Content="ВОДИТЕЛИ" HorizontalAlignment="Center" Margin="0,285,0,0" VerticalAlignment="Top" Foreground="White" BorderBrush="{x:Null}" Background="Black" FontWeight="Bold" FontSize="34" Height="52" Width="210" Click="vodit">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="30"/>
                        </Style>
