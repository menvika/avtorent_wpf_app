                </Button>
                <Label Content="ДОБАВЛЕНИЕ" HorizontalAlignment="Right" Margin="0,0,336,78" VerticalAlignment="Bottom" Foreground="#FFED5C18" FontWeight="Bold" FontSize="18" FontStyle="Italic" Height="34" Width="134"/>
                <Label Content="ПРОСМОТР" HorizontalAlignment="Center" Margin="0,361,0,0" VerticalAlignment="Top" Foreground="#FFED5C18" FontWeight="Bold" FontSize="18" FontStyle="Italic" Height="34" Width="124"/>
                <Label Content="УДАЛЕНИЕ" HorizontalAlignment="Right" Margin="0,0,338,34" VerticalAlignment="Bottom" Foreground="#FFED5C18" FontWeight="Bold" FontSize="18" FontStyle="Italic" Height="34" Width="120"/>
                <Label Content="УДАЛЕНИЕ" HorizontalAlignment="Right" Margin="0,0,105,35" VerticalAlignment="Bottom" Foreground="#FFED5C18" FontWeight="Bold" FontSize="18" FontStyle="Italic" Height="34" Width="108"/>
                <Label Content="ДОБАВЛЕНИЕ" HorizontalAlignment="Right" Margin="0,0,92,78" VerticalAlignment="Bottom" Foreground="#FFED5C18" FontWeight="Bold" FontSize="18" FontStyle="Italic" Height="34" Width="134"/>
                <Label Content="ПРОСМОТР" HorizontalAlignment="Right" Margin="0,0,104,55" VerticalAlignment="Bottom" Foreground="#FFED5C18" FontWeight="Bold" FontSize="18" FontStyle="Italic" Height="34" Width="110"/>
                <Button Content="      " Grid.ColumnSpan="2" HorizontalAlignment="Right" Margin="0,0,726,11" VerticalAlignment="Bottom" Height="39" Width="46" Click="cancel">
                    <Button.Foreground>
                        <SolidColorBrush Color="Black" Opacity="0"/>
                    </Button.Foreground>
                    <Button.BorderBrush>
                        <SolidColorBrush Color="White" Opacity="0.015"/>
                    </Button.BorderBrush>
                    <Button.Background>
                        <ImageBrush ImageSource="image/cancel.png"/>
                    </Button.Background>
                </Button>
                <Label Content="УДАЛЕНИЕ" HorizontalAlignment="Right" Margin="0,0,583,32" VerticalAlignment="Bottom" Foreground="#FFED5C18" FontWeight="Bold" FontSize="18" FontStyle="Italic" Height="34" Width="120"/>
            </Grid>
