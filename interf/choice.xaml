                    <Button.Background>
                        <ImageBrush ImageSource="image/arenda.png"/>
                    </Button.Background>
                </Button>
                <Button x:Name="Zakazi1" Content="ЗАКАЗЫ" HorizontalAlignment="Right" Margin="0,0,536,113" VerticalAlignment="Bottom" Foreground="White" Background="Black" FontWeight="Bold" FontSize="34" Height="52" Width="214" BorderBrush="Black" Click="cl_zakaz" RenderTransformOrigin="0.565,0.629">
                    <Button.Resources>
                        <Style TargetType="{x:Type Border}">
                            <Setter Property="CornerRadius" Value="30"/>
                        </Style>
                    </Button.Resources>
                </Button>
                <Label Content="ДОБАВЛЕНИЕ" HorizontalAlignment="Right" Margin="0,0,576,78" VerticalAlignment="Bottom" Foreground="#FFED5C18" FontWeight="Bold" FontSize="18" FontStyle="Italic" Height="34" Width="134"/>
                <Label Content="ПРОСМОТР" HorizontalAlignment="Right" Margin="0,0,582,55" VerticalAlignment="Bottom" Foreground="#FFED5C18" FontWeight="Bold" FontSize="18" FontStyle="Italic" Height="34" Width="122"/>
