<Window x:Class="interf.choice"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:interf"
        mc:Ignorable="d" WindowState="Maximized"
        WindowStyle="None" Title="AVTORENT" Height="450" Width="800">
    <Grid>
        <Viewbox>
            <Grid Height="450" Width="800">
                <Label Content="ВЫБЕРИТЕ ДЕЙСТВИЕ" HorizontalAlignment="Right" Margin="0,0,102,356" VerticalAlignment="Bottom" Background="{x:Null}" FontSize="52" Foreground="#FFED5C18" FontWeight="Bold" Height="81" Width="592"/>
